    SET(CMAKE_CXX_FLAGS_RELEASE "-O3 -ggdb -DNDEBUG -march=core2 ${CMAKE_CXX_FLAGS}")
    SET(CMAKE_C_FLAGS_DEBUG "-O0 -ggdb ")
