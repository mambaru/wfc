IF("${CMAKE_COMPILER_IS_GNUCXX}" MATCHES "1")
    #SET(CMAKE_CXX_STANDARD    "-std=c++11")
    SET(CMAKE_CXX_STANDARD    "-std=gnu++11")
    SET(CMAKE_CXX_WARN_FLAGS  "-W -Wall -pedantic")
